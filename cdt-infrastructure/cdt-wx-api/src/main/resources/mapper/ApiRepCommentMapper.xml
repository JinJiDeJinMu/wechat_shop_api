<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiRepCommentMapper">

    <resultMap type="com.platform.entity.RepCommentVo" id="repCommentMap">
        <result property="id" column="id"/>
        <result property="commentId" column="comment_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="content" column="content"/>
        <result property="addTime" column="add_time"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.RepCommentVo">
		select
			`id`,
    			`comment_id`,
    			`user_id`,
    			`user_name`,
    			`content`,
    			`add_time`    
		from rep_comment
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.RepCommentVo">
        select
        `id`,
        `comment_id`,
        `user_id`,
        `user_name`,
        `content`,
        `add_time`
        from rep_comment
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from rep_comment
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.RepCommentVo" useGeneratedKeys="true" keyProperty="id">
		insert into rep_comment(
                    			`comment_id`,
                    			`user_id`,
                    			`user_name`,
                    			`content`,
                    			`add_time`            )
		values(
                    			#{commentId},
                    			#{userId},
                    			#{userName},
                    			#{content},
                    			#{addTime}            )
	</insert>

    <update id="update" parameterType="com.platform.entity.RepCommentVo">
        update rep_comment
        <set>
            <if test="commentId != null">`comment_id` = #{commentId
                        },
            </if>
            <if test="userId != null">`user_id` = #{userId
                        },
            </if>
            <if test="userName != null">`user_name` = #{userName
                        },
            </if>
            <if test="content != null">`content` = #{content
                        },
            </if>
            <if test="addTime != null">`add_time` = #{addTime
                        }
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from rep_comment where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from rep_comment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>