<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.OrdercashApplyDao">

    <resultMap type="com.platform.entity.OrdercashApplyEntity" id="ordercashApplyMap">
        <result property="orderId" column="order_id"/>
        <result property="orderSn" column="order_sn"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="merchantName" column="merchant_name"/>
        <result property="actualPrice" column="actual_price"/>
        <result property="payTime" column="pay_time"/>
        <result property="applyId" column="apply_id"/>
        <result property="applyName" column="apply_name"/>
        <result property="applyTime" column="apply_time"/>
        <result property="endTime" column="end_time"/>
        <result property="status" column="status"/>
        <result property="remarks" column="remarks"/>
        <result property="operator" column="operator"/>
        <result property="operatorName" column="operator_name"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.OrdercashApplyEntity">
		select
			`order_id`,
    			`order_sn`,
    			`merchant_id`,
    			`merchant_name`,
    			`actual_price`,
    			`pay_time`,
    			`apply_id`,
    			`apply_name`,
    			`apply_time`,
    			`end_time`,
    			`status`,
    			`remarks`,
    			`operator`,
    			`operator_name`
		from nideshop_ordercash_apply
		where order_id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.OrdercashApplyEntity">
        select
        `order_id`,
        `order_sn`,
        `merchant_id`,
        `merchant_name`,
        `actual_price`,
        `pay_time`,
        `apply_id`,
        `apply_name`,
        `apply_time`,
        `end_time`,
        `status`,
        `remarks`,
        `operator`,
        `operator_name`
        from nideshop_ordercash_apply
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by order_id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from nideshop_ordercash_apply
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.OrdercashApplyEntity">
		insert into nideshop_ordercash_apply(
        			`order_id`,
    			`order_sn`,
    			`merchant_id`,
    			`merchant_name`,
    			`actual_price`,
    			`pay_time`,
    			`apply_id`,
    			`apply_name`,
    			`apply_time`,
    			`end_time`,
    			`remarks`,
    			`operator`,
    			`operator_name`          )
		values(
        			#{orderId},
                    			#{orderSn},
                    			#{merchantId},
                    			#{merchantName},
                    			#{actualPrice},
                    			#{payTime},
                    			#{applyId},
                    			#{merchantName},
                    			#{applyTime},
                    			#{endTime},
                    			#{remarks},
                    			#{operator},
                    			#{operatorName}
                    			)
	</insert>

    <update id="update" parameterType="com.platform.entity.OrdercashApplyEntity">
        update nideshop_ordercash_apply
        <set>
            <if test="orderSn != null">`order_sn` = #{orderSn
                        },
            </if>
            <if test="merchantId != null">`merchant_id` = #{merchantId
                        },
            </if>
            <if test="actualPrice != null">`actual_price` = #{actualPrice
                        },
            </if>
            <if test="payTime != null">`pay_time` = #{payTime
                        },
            </if>
            <if test="applyId != null">`apply_id` = #{applyId
                        },
            </if>
            <if test="applyTime != null">`apply_time` = #{applyTime
                        },
            </if>
            <if test="endTime != null">`end_time` = #{endTime
                        },
            </if>
            <if test="status != null">`status` = #{status
                        },
            </if>
            <if test="remarks != null">`remarks` = #{remarks
                        },
            </if>
            <if test="operator != null">`operator` = #{operator
                        },
            </if>
            <if test="merchantName != null">`merchant_name` = #{merchantName
                        },
            </if>
            <if test="applyName != null">`apply_name` = #{applyName
                        },
            </if>
            <if test="operatorName != null">`operator_name` = #{operatorName
                        }
            </if>
        </set>
        where order_id = #{orderId}
    </update>

    <delete id="delete">
		delete from nideshop_ordercash_apply where order_id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_ordercash_apply where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>

    <update id="review">
        update nideshop_ordercash_apply set status = 1 where order_id=#{id}
    </update>

    <select id="query" resultType="com.platform.entity.OrdercashApplyEntity">
        select
         `order_id`,
        `order_sn`,
        `merchant_id`,
        `merchant_name`,
        `actual_price`,
        `pay_time`,
        `apply_id`,
        `apply_name`,
        `apply_time`,
        `end_time`,
        `status`,
        `remarks`,
        `operator`,
        `operator_name`
        from nideshop_ordercash_apply
        WHERE order_id = #{id}
    </select>
</mapper>