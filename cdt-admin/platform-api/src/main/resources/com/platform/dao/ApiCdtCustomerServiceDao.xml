<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiCdtCustomerServiceDao">

    <resultMap type="com.platform.entity.CdtCustomerServiceVo" id="cdtCustomerServiceMap">
        <result property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="phone" column="phone"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.CdtCustomerServiceVo">
		select
			`id`,
    			`url`,
    			`phone`    
		from cdt_customer_service
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.CdtCustomerServiceVo">
        select
        `id`,
        `url`,
        `phone`
        from cdt_customer_service
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from cdt_customer_service
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.CdtCustomerServiceVo">
		insert into cdt_customer_service(
        			`id`,
                    			`url`,
                    			`phone`            )
		values(
        			#{id},
                    			#{url},
                    			#{phone}            )
	</insert>

    <update id="update" parameterType="com.platform.entity.CdtCustomerServiceVo">
        update cdt_customer_service
        <set>
            <if test="url != null">`url` = #{url
                        },
            </if>
            <if test="phone != null">`phone` = #{phone
                        }
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from cdt_customer_service where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from cdt_customer_service where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>