<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiCommentV2Mapper">

    <resultMap type="com.platform.entity.CommentReq" id="CommentV2Map">
        <result property="id" column="id"/>
        <result property="orderNo" column="order_no"/>
        <result property="goodId" column="good_id"/>
        <result property="content" column="content"/>
        <result property="commentTime" column="comment_time"/>
        <result property="starLevel" column="star_level"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.CommentReq">
		select
			`id`,
    			`order_no`,
    			`good_id`,
    			`content`,
    			`comment_time`,
    			`star_level`,
    			`user_id`,
    			`status`,
    			`create_time`    
		from cdt_product_comment
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.CommentReq">
        select
        `id`,
        `order_no`,
        `good_id`,
        `content`,
        `comment_time`,
        `star_level`,
        `user_id`,
        `status`,
        `create_time`
        from cdt_product_comment
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from cdt_product_comment
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.CommentReq" useGeneratedKeys="true" keyProperty="id">
		insert into cdt_product_comment(
                    			`order_no`,
                    			`good_id`,
                    			`content`,
                    			`comment_time`,
                    			`star_level`,
                    			`user_id`,
                    			`status`,
                    			`create_time`            )
		values(
                    			#{orderNo},
                    			#{goodId},
                    			#{content},
                    			#{commentTime},
                    			#{starLevel},
                    			#{userId},
                    			#{status},
                    			#{createTime}            )
	</insert>

    <update id="update" parameterType="com.platform.entity.CommentReq">
        update cdt_product_comment
        <set>
            <if test="orderNo != null">`order_no` = #{orderNo
                        },
            </if>
            <if test="goodId != null">`good_id` = #{goodId
                        },
            </if>
            <if test="content != null">`content` = #{content
                        },
            </if>
            <if test="commentTime != null">`comment_time` = #{commentTime
                        },
            </if>
            <if test="starLevel != null">`star_level` = #{starLevel
                        },
            </if>
            <if test="userId != null">`user_id` = #{userId
                        },
            </if>
            <if test="status != null">`status` = #{status
                        },
            </if>
            <if test="createTime != null">`create_time` = #{createTime
                        }
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from cdt_product_comment where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from cdt_product_comment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>